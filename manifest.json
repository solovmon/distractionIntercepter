{
    "manifest_version": 3,
    "name": "Distraction Ward",
    "version": "1.0.0",
    "description": "Grants user the capability of restricting access to domains they select.",
    "action": {
        "default_popup": "html/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/content.js"]  
        }
    ],
    "icons": {
        "16": "images/Wag_16_png.png",
        "32": "images/Wag_32_png.png",
        "48": "images/Wag_48_png.png",
        "128": "images/Wag_128_png.png"
    }
}